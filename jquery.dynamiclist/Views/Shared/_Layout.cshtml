@{
    string ui = Request["ui"] ?? "bootstrap";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @if (ui == "kendo")
    {
        <link rel="stylesheet" type="text/css" href="~/Content/kendo/2014.1.416/kendo.common.min.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/kendo/2014.1.416/kendo.default.min.css" />
    }
    else if (ui == "mobile")
    {
        <link rel="stylesheet" type="text/css" href="~/Content/jquery.mobile-1.4.5.min.css" />
    }
    else if (ui == "ui")
    {
        @Styles.Render("~/Content/themes/base/css")
    }
    else if (ui == "bootstrap")
    {
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.css" />
        <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.css" />
    }

    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div>
        Select a UI framework:
        <select id="uiSelect">
            <option value="bootstrap">bootstrap</option>
            <option value="ui">jQuery UI</option>
            <option value="mobile">jQuery Mobile</option>
            <option value="kendo">Kendo UI</option>
        </select>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")

    @if (ui == "kendo")
    {
        <script src="~/Scripts/kendo/2014.1.416/kendo.ui.core.min.js"></script>
    }
    else if (ui == "mobile")
    {
        <script src="~/Scripts/jquery.mobile-1.4.5.js"></script>
    }
    else if (ui == "ui")
    {
        @Scripts.Render("~/bundles/jqueryui")
    }
    else if (ui == "bootstrap")
    {
        <script src="~/Scripts/bootstrap.js"></script>
    }

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        <!--
            $(document).ready(function()
            {
                $("#uiSelect").val("@ui");

                $("#uiSelect").change(function()
                {
                    window.location = "?ui=" + $(this).val();
                });
            });
        // -->
    </script>
</body>
</html>
